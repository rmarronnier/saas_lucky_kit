{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "dom"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "app/js/*"
      ]
    },
    "sourceMap": true,
    "target": "es5",
    "strict": false,
    "alwaysStrict": false
  },
  "exclude": [
    "node_modules",
    "lib",
    "public"
  ],
  "compileOnSave": false
}